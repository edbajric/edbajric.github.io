{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "custom-variant",
          "layer",
          "screen",
          "tailwind",
          "theme",
          "import",
          "supports"
        ]
      }
    ],
    "import-notation": null,
    "no-empty-source": null
  }
}
